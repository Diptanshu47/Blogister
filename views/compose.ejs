<%-include('partials/header'); %>
    <h1><%=heading%></h1>

    <% if (locals.post) { %>
        <form id="editForm" method="post" action="/edit/posts/<%=post[0]._id%>">
            <div class="form-group">
                <label class="form-label">Title</label>
                <input class="form-control" type="text" name="name" value="<%=post[0].name %>">
            </div>
            <div class="form-group">
                <label class="form-label">Content</label>
                <textarea class="form-control" rows="5" type="text" name="content"><%=post[0].content %></textarea>
            </div>
            <button class="btn btn-primary" type="submit"><%=submit%></button>
        </form>
    <% } else {%>
        <form id="compose" action="/compose" method="post">
            <div class="form-group">
                <label class="form-label">Title</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="title" placeholder="Input here" required>
            </div>
            <div class="form-group">
                <label class="form-label">Content</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" type="text" name="content" placeholder="Input here" required></textarea>
            </div>
            <button class="btn btn-primary" type="submit"><%=submit%></button>
        </form>
    <% } %>

<%-include('partials/footer'); %>